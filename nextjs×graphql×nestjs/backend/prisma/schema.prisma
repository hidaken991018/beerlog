// DBはMySQLを使っていこうか：https://bigdata-tools.com/sql-db/#4RDBMS

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id          String  @id @default(uuid())
  title       String
  text        String
  isPublished Boolean @default(false)
}
